<%=render :partial => 'users/profile', :locals => {:user => user}%>
<%unless @iphoto%>
  <!-- User stats -->
  <div class="user-stats">
    <div class="stat-stack">
      <div class="stack-number">
        <p><%=user.comments.count%></p>
      </div>
      <div class="stack-cat">
        <p>comments</p>
      </div>
    </div>
    <div class="stat-stack">
      <div class="stack-number">
        <p><%=user.favorites.count%></p>
      </div>
      <div class="stack-cat">
        <p>likes</p>
      </div>
    </div>
    <div class="stat-stack">
      <div class="stack-number">
        <p><%=Iphoto.by_username(user.name).listed.count%></p>
      </div>
      <div class="stack-cat">
        <p>photos</p>
      </div>
    </div>
  </div>
<%end%>