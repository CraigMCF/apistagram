<!-- Leave a comment section - Logged in  -->
<%=form_tag add_comment_path(@iphoto), :id => "add_comment" do %>
  <div class="leavecomment">
    <div class="leave-title">
      <h2>Leave a comment</h2>
    </div>
    <div class="text-area">
      <%=text_area_tag :comment, "", :class=>'textbox', :id => 'text-input-area'%>      
    </div>
    <div class="submit-button">
      <%=submit_tag 'LOG IN TO POST COMMENT', :class => 'comment-button-style'%>
    </div>
  </div>
<%end%>   