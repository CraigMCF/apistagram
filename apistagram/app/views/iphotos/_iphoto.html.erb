<div class="thumb">
  <div class="thumb-off">
    <a href="single.html" class="outerLink"><%=image_tag iphoto.url, :alt => "", :width => 286, :height => 239%></a>
  </div>
  <div class="thumb-hover">
  </div>
  
  <div class="call-text">
    <%=link_to (content_tag(:span, 'Click here to see full size')), iphoto_path(iphoto)%>
  </div>
</div>

<!-- Photo stats div -->
<div class="thumb_stats">
  <div class="comment-stat">
    <%=comment_link(iphoto, current_user)%>
  </div>
  <div class="like-stat">
    <%=heart_link(iphoto, current_user)%>
  </div> 
</div>

<!-- Photo username div -->

<div class="photo_username">
  <%=link_to content_tag(:h3, iphoto.username), user_path(iphoto.username), :title => "View #{iphoto.username}'s profile"%>
</div>
<!-- Close photo thumb div -->