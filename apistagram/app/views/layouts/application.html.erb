      $.fn.broken = function(){
        return this.each(function(){
          if(!this.complete || (typeof this.naturalWidth != 'undefined' && this.naturalWidth == 0))
            $(this).parents('.photoHolder').hide();
            $(this).parents('.more-thumb').hide();
        });
      };

      $(window).load(function () {
        $('img').broken();
      });
