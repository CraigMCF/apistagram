<!-- Header Wrapper -->
<div id="header_wrapper">
	<!-- Header -->
	<div id="header">
		<!-- Logo div -->
		<div id="h_logo">
		  <%= link_to image_tag("logo.png", :alt => "Tatstagram - Share your Instagram photos"), root_url%>
		</div>

		<!-- Header banner ad div -->
		<div id="h_banner">
      <%=header_ad%>
		</div>   

    <%- if logged_in? %>
      <div id="logged_in">
        <div class="loggedin-user-thumb">
          <%=image_tag current_user.image_url(:thumb), :alt => current_user.name, :width=>"45", :height=>"45"%>
        </div>
        <div class="loggedin-username">  
          <a href="#"> <p><%=current_user.name%></p> </a>  
          <p class="user-control"><%=link_to "sign out", signout_path%> | <%=link_to 'view profile', user_path(current_user)%></p>
        </div>
      </div>
    <%else%>
      <div id="h_signin">
        <!-- , :oversrc=>"images/signin-button-on.gif" -->
        <%= link_to image_tag("signin-button-off.gif", :alt => "signin-button-off"), new_auth_path%>
        <span class="register">or <%=link_to "register", new_auth_path%> for an account</span>
      </div>
    <%end%>

	<!-- Close header div -->
	</div>	
<!-- Close Header Wrapper Div -->
</div>